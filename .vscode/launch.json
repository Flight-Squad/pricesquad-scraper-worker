{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/index.ts"]
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "envkey"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
            "args": ["--timeout", "999999", "--colors", "${file}"],
            "protocol": "inspector",
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"]
        }
    ]
}
