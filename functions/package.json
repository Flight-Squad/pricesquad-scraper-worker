{
    "name": "functions",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && firebase serve --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "npm run ts-mocha -- --grep @slow --invert",
        "test:slow": "npm run ts-mocha -- --grep @slow --timeout 999999",
        "ts-mocha": "ts-mocha -r tsconfig-paths/register src/**/*.test.ts"
    },
    "engines": {
        "node": "8"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@flight-squad/admin": "^0.2.3",
